@model MusicWeb.Models.Login
<div class="search-content overlay">
    <h2>Login</h2>
    @using (Ajax.BeginForm("Login", "Account", new AjaxOptions
        {
        OnSuccess = "UpdateUserAll",
        HttpMethod = "POST",
        UpdateTargetId = "content",
        InsertionMode = InsertionMode.Replace
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                @Html.CheckBoxFor(model => model.RememberMe, new { htmlAttributes = new { @class = "left" } })
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 left ">
                    <input type="submit" value="Login" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
</div>
