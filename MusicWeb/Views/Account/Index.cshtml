
@model MusicWeb.Models.Account
<h2>User @Model.UserName</h2>
    <hr />
    <div class="form-inline">
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
            <div class="col-xs-10">
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
            <div class="col-xs-10">
                @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <a data-url="@Url.Action("ChangePassword", "Account")" class="fetchable">Change password</a>
        </div>
    </div>


